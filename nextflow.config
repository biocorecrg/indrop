manifest {
    mainScript = 'indrop.nf'
}
 

includeConfig "$baseDir/params.config"


process {
  queue = 'short-sl7,long-sl7,mem_256,mem_512'

  $mapping {
      queue = 'mem_1tb,short-sl7'
      cpus=8
      memory='80G'	
  }
  
  $getReadLength {
      memory='1G'	
  }

  $buildIndex {
      queue = 'mem_1tb,short-sl7'
      cpus='12'
      memory='100G'
  }
  $qualimap {
      cpus='4'
      memory='20G'
  }

}


process.container = '/software/bi/biocore_tools/Docker_files/docker-centos-perlbrew/indrops/singularity/biocorecrg_indrops-2017-06-07-096bc4f64e13.img'
singularity.enabled = true
singularity.autoMounts = true
